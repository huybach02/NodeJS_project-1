<div class="mt-4">
    <div class="row">

        {{#each courses}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-course-item">
                    <a href="/khoa-hoc/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" /></a>

                    <div class="card-body">
                        <a href="/khoa-hoc/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5></a>

                        <p class="card-text">{{this.description}}</p>
                        <a href="/khoa-hoc/{{this.slug}}" class="btn btn-primary btn-buy">Mua khóa học</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>